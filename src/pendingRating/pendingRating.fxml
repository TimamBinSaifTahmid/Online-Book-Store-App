<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane fx:id="pendingRatingPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pendingRating.PendingRatingController">
   <children>
      <AnchorPane layoutX="14.0" layoutY="27.0" prefHeight="368.0" prefWidth="216.0">
         <children>
            <ListView fx:id="listView" layoutX="8.0" layoutY="42.0" prefHeight="332.0" prefWidth="200.0" />
            <Label layoutX="14.0" layoutY="14.0" text="Pending Ratings">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
      <AnchorPane fx:id="selectedBookPane" layoutX="264.0" layoutY="113.0" prefHeight="259.0" prefWidth="200.0">
         <children>
            <Label layoutX="14.0" layoutY="14.0" text="Selected Book">
               <font>
                  <Font name="System Bold" size="13.0" />
               </font>
            </Label>
            <Label fx:id="bookDetails_label" layoutX="14.0" layoutY="44.0" text="Book Details" />
            <Button layoutX="81.0" layoutY="220.0" mnemonicParsing="false" onAction="#onRateButtonClick" text="Rate" />
            <TextField fx:id="rate_textField" layoutX="27.0" layoutY="188.0" promptText="Rate this book out of 10" />
         </children>
      </AnchorPane>
      <Button layoutX="14.0" layoutY="14.0" mnemonicParsing="false" onAction="#onBackButtonClick" text="Back" />
   </children>
</AnchorPane>
